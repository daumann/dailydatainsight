            function reformat (array) {
          var data = [];
          array.map(function (d){
            data.push({
                id: +d.id,
                points: d.points,
                title: d.title,
                commentsCount: d.commentsCount,
                date: +d.date,
                contentThumbURL: d.contentThumbURL,
                contentURL: d.contentURL,
                referenceURLs: d.referenceURLs

            });
          });
          return data;
        }
    
